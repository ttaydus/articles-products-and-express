<h1>Product Page</h1>
<ul>
    {{#each products}}
    <li><a href="/products/{{id}}">{{name}}</a></li>
    {{/each}}
</ul>

<form action="/products/new" method="GET">
    <button type="submit">Add a New Product</button>
</form>

<form action="/products/edit" method="GET">
    <button type="submit">Edit an Existing Product</button>
</form>

<form action="/products/delete" method="GET">
    <button type="submit">Delete an Existing Product</button>
</form>
